{
  "framework": {
    "environment": "production",
    "debug": false,
    "log_level": "INFO",
    "enable_metrics": true,
    "enable_tracing": true
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8080,
    "workers": 4,
    "max_requests": 1000,
    "timeout": 30
  },
  "database": {
    "url": "postgresql://framework:${DB_PASSWORD}@postgres:5432/framework",
    "pool_size": 10,
    "max_overflow": 20,
    "pool_timeout": 30,
    "pool_recycle": 3600
  },
  "redis": {
    "url": "redis://redis:6379/0",
    "connection_pool": {
      "max_connections": 20,
      "retry_on_timeout": true
    }
  },
  "policy": {
    "enforcement_level": "strict",
    "cache_enabled": true,
    "cache_ttl": 300,
    "audit_enabled": true
  },
  "compliance": {
    "enabled_standards": [
      "SOC2",
      "GDPR",
      "ISO27001",
      "NIST_CSF"
    ],
    "monitoring_interval": 300,
    "auto_remediation": true,
    "notification_channels": [
      "email",
      "slack"
    ]
  },
  "security": {
    "encryption_enabled": true,
    "tls_version": "1.3",
    "api_key_required": true,
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 1000,
      "burst_size": 100
    }
  },
  "monitoring": {
    "prometheus": {
      "enabled": true,
      "port": 9090,
      "metrics_path": "/metrics"
    },
    "health_checks": {
      "enabled": true,
      "interval": 30,
      "timeout": 10
    },
    "alerts": {
      "enabled": true,
      "email_notifications": true,
      "slack_notifications": true
    }
  },
  "testing": {
    "automated_tests": {
      "enabled": true,
      "schedule": "0 2 * * *",
      "test_suites": [
        "core_tests",
        "integration_tests",
        "compliance_tests"
      ]
    },
    "regression_testing": {
      "enabled": true,
      "baseline_retention_days": 30
    }
  }
}