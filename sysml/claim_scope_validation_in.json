{
    "$schema":  "http://json-schema.org/draft-07/schema#",
    "$id":  "https://chrystallum.org/schemas/claim_scope_validation_in.json",
    "title":  "Claim Scope Validation Input",
    "description":  "Request to validate claim geographic-temporal consistency",
    "type":  "object",
    "required":  [
                     "request_id",
                     "claim_id",
                     "period_id",
                     "place_qids"
                 ],
    "properties":  {
                       "request_id":  {
                                          "type":  "string"
                                      },
                       "claim_id":  {
                                        "type":  "string"
                                    },
                       "period_id":  {
                                         "type":  "string"
                                     },
                       "place_qids":  {
                                          "type":  "array",
                                          "items":  {
                                                        "type":  "string",
                                                        "pattern":  "^Q[0-9]+$"
                                                    },
                                          "minItems":  1
                                      },
                       "time_bbox":  {
                                         "type":  "object",
                                         "properties":  {
                                                            "start_min":  {
                                                                              "type":  "integer"
                                                                          },
                                                            "end_max":  {
                                                                            "type":  "integer"
                                                                        }
                                                        },
                                         "additionalProperties":  false
                                     }
                   },
    "additionalProperties":  false
}